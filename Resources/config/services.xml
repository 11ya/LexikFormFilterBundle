<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="lexik_form_filter.query_builder.class">Lexik\Bundle\FormFilterBundle\Filter\QueryBuilder</parameter>
    </parameters>

    <services>
        <service id="lexik_form_filter.query_builder" class="%lexik_form_filter.query_builder.class%" />
    
         <!-- FilterExtension -->
        <service id="lexik_filter.type.filter" class="Lexik\Bundle\FormFilterBundle\Filter\Extension\Type\FilterType">
            <argument type="service" id="validator" />
            <tag name="form.type" alias="filter" />
        </service>

        <service id="lexik_filter.type.filter_field" class="Lexik\Bundle\FormFilterBundle\Filter\Extension\Type\FilterFieldType">
            <argument type="service" id="validator" />
            <tag name="form.type" alias="filter_field" />
        </service>

        <service id="lexik_filter.type.filter_text" class="Lexik\Bundle\FormFilterBundle\Filter\Extension\Type\FilterTextType">
            <argument type="service" id="validator" />
            <tag name="form.type" alias="filter_text" />
        </service>

        <service id="lexik_filter.type.filter_number" class="Lexik\Bundle\FormFilterBundle\Filter\Extension\Type\FilterNumberType">
            <argument type="service" id="validator" />
            <tag name="form.type" alias="filter_number" />
        </service>
        
    </services>
</container>
